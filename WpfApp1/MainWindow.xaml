<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Label Content="Counter:" HorizontalAlignment="Left" Margin="312,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="B1" Content="Safe Start (another thread)" HorizontalAlignment="Left" Margin="200,200,0,0" VerticalAlignment="Top" Background="green" Click="ButtonCounter1_Click"/>
        <TextBox x:Name="Counter" HorizontalAlignment="Left" Margin="400,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" IsReadOnly="True" Text="{Binding Counter1Text, UpdateSourceTrigger=PropertyChanged}"/>
        <Button x:Name="B2" Content="Dangerous Start (main thread)" HorizontalAlignment="Left" Margin="550,200,0,0" VerticalAlignment="Top" Background="red" Click="ButtonCounter2_Click"/>
    </Grid>
</Window>
